<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
        Conestoga Pizzeria
        </title>
        
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" 
              integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
        
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css">
        
        <!--<link rel="stylesheet" type="text/css" href="stylesheet/main.css">-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
        <!--<script src="Scripts/myscript.js"></script> -->
        
        
     </head>
    <body>
        <div class="container">
            <div class="navbar navbar-default navbar-fixed">
                <div class="container">
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                   <!-- <img src="images/clogo.png" alt="conestoga" height="50px" width="35px">-->
                    </div>
                    <div class="collapse navbar-collapse" id="example">
                        <ul class="nav navbar-nav">
                            <li><a><span class="glyphicon glyphicon-home"></span>Home</a></li>
                            <li><%=
                            if(user_signed_in? && !current_user.admin?)
                                link_to "Order", new_order_path(@order), :class=>"glyphicon glyphicon-shopping-cart"
                            elsif
                                link_to "Order", new_order_path(@order), :class=>"glyphicon glyphicon-shopping-cart"
                            end%></li>
                            <li><a><span class="glyphicon glyphicon-heart-empty"></span>About us</a></li>
                            <li><%= link_to "Contact Us", contact_us_contact_path %></li>
                        </ul>
                        
                        <% if !user_signed_in? %> 
                            <a class="btn btn-success navbar-btn navbar-right" <%= link_to"Login", new_user_session_path(@user) %> </a>
                        <% end %>
                        
                        <% if user_signed_in? %>
                            
                               <a class="btn btn-danger navbar-btn navbar-right"<%= link_to('Logout', destroy_user_session_path, :method => :delete) %></a>
                                  <% #if current_user.admin?%>
                                  <%# render :file => "orders/index.html.erb" %>
                                  <%#end%>
                        <% end %>
                          
                    </div>
                </div>
            </div>
            
            <div class="container">
                <div class="jumbotron">
                    <div class="container">
                        <div class="col-md-8">
                            <h1>Conestoga Pizzeria</h1>
                            <h3>Good Friends. Great Pizza.</h3>
                            
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="container">
                <% if user_signed_in? %>
                <h2> Hi  <mark>  <%= current_user.name %> </mark>, Welcome to Conestoga Pizzeria </h2>
                <% end %>
                
                
                <%= if (user_signed_in? && current_user.admin?)
                      link_to 'Show Orders', orders_path, :class => 'btn btn-success'
                    end %>
         
                <%= if (user_signed_in? && current_user.admin?)
                      link_to 'Show Users', users_path, :class => 'btn btn-success'
                    end %>
                    
                <%= if (user_signed_in? && current_user.admin?)
                      link_to 'Add User', new_user_path, :class => 'btn btn-success'
                    end %> 
            </div>
            
        </div>    
    </body>
</html>