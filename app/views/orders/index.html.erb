<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<div class="table-striped">          
  <table class="table">
  <thead>
    <tr>
      <th>Order No.</th>
      <th>Address</th>
      <th>City</th>
      <th>Province</th>
      <th>Postalcode</th>
      <th>Phonenumber</th>
      <th>Size</th>
      <th>Crust</th>
      <th>Toppings</th>
      <th>Numberofpizza</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
   <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.address %></td>
        <td><%= order.city %></td>
        <td><%= order.province %></td>
        <td><%= order.postalcode %></td>
        <td><%= order.phonenumber %></td>
        <td><%= order.size %></td>
        <td><%= order.crust %></td>
        <td><%= order.toppings %></td>
        <td><%= order.numberofpizza %></td>
        <td><%= order.price %></td>
        <td>
           <%= if (user_signed_in? && current_user.admin?)
              label_tag(:status,"status")
              select_tag "status","<option>UnComplete</option><option>Complete</option>".html_safe
            end %>
          
          
        </td>
        
        <td><a class="btn btn-success"<%= link_to 'Show', order %></a></td>
        <td><a class="btn btn-primary"<%= link_to 'Edit', edit_order_path(order) %></a></td>
        <td><%= link_to '', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

