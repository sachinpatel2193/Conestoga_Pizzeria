<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
  <div class="alert alert-danger">
    
  
    <div id="error_explanation">
      <h3><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>
  <div class="container">
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel panel-heading">
          <span class="glyphicon glyphicon-map-marker"></span> Address Information
        </div>
        <div class="field">
          <%= f.label :address %><br>
          <%= f.text_field :address, :class => "form-control" %>
        </div>
        <div class="field">
          <%= f.label :city %><br>
          <%= f.text_field :city, :class => "form-control" %>
        </div>
        <div class="field">
          <%= f.label :province %><br>
          <%= f.select(:province, options_for_select([['ON', 'ON'] , ['MB' , 'MB'], ['SK','SK' ], ['QC', 'QC'] ] ),{},{:class => "form-control"}) %>
        </div>
        <div class="field">
          <%= f.label :postalcode %><br>
          <%= f.text_field :postalcode, :class => "form-control" %>
        </div>
        <div class="field">
          <%= f.label :phonenumber %><br>
          <%= f.text_field :phonenumber, :class => "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel panel-heading">
          <span class="glyphicon glyphicon-info-sign"></span> Information
        </div>
        <div>
          <ul>
            <li id="instruction">Price will be According to Your selected Size, Crust and Toppings.</li>
            <li id="instruction">Small Size - $5</li>
            <li id="instruction">Medium Size - $10</li>
            <li id="instruction">Large Size - $15</li>
            <li id="instruction">X-Large - $20 </li>
            <li id="instruction">Stuff Crust - $2 extra</li>
            <li id="instruction">Each Toppings will cost you $0.5 More.</li>
            <li id="instruction">First Topping will be free.</li>
            <li id="instruction">You can select your favourite Sauce.</li>
            <li id="instruction">Please select Current Option, So, You can see next option.</li>
          </ul>
        </div>
      </div> 
    </div>
  </div>
  <div class="container">
    <div class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel panel-heading">
          <span class="glyphicon glyphicon-hand-down"></span> Select Size:
        </div>  
        <div class="form-group">
          <div class="field">
            <%= f.label :size  %><br>
            <%= f.radio_button :size, 'small', :id => 'field_with_error' %>
            <%= label_tag(:small,"small") %><br>
            <%= f.radio_button :size, 'medium', :id => 'field_with_error'  %>
            <%= label_tag(:medium,"medium") %><br>
            <%= f.radio_button :size, 'large', :id => 'field_with_error'  %>
            <%= label_tag(:large,"large") %><br>
            <%= f.radio_button :size, 'xlarge', :id => 'field_with_error'  %>
            <%= label_tag(:xlarge,"xlarge") %><br>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel panel-heading">
          <span class="glyphicon glyphicon-hand-down"></span> Select Pizza Crust:
        </div> 
        <div class="field">
          <%= f.label :crust %><br>
          <%= f.radio_button :crust, 'Regular' %> Regular<br />
          <%= f.radio_button :crust, 'Stuff_Crust' %> Stuff Crust<br />
          <%= f.radio_button :crust, 'Crunchy_Thin' %> Crunchy Thin<br />
          <%= f.radio_button :crust, 'Thick' %> Thick<br />
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel panel-heading">
          <span class="glyphicon glyphicon-hand-down"></span> Select Toppings:
        </div>  
        <div class="field">
          <%= f.label :toppings %><br>
          <%= check_box_tag 'order[toppings][]', 'Onion', checked('Onion'), id:'orders_toppings' %> 
          <%= label_tag 'orders_toppings', 'Onion' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'GreenPepper', checked('GreenPepper'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'GreenPepper' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'Pineapple', checked('Pineapple'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'Pineapple' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'Mashroom', checked('Mashroom'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'Mashroom' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'Tomato', checked('Tomato'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'Tomato' %><br>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel panel-heading">
          <span class="glyphicon glyphicon-hand-down"></span> Select Toppings:
        </div>
        <div class="field">
          <%= f.label :toppings %><br>
          <%= check_box_tag 'order[toppings][]', 'GreenOlives', checked('GreenOlives'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'GreenOlives' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'BlackOlives', checked('BlackOlives'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'BlackOlives' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'Chicken', checked('Chicken'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'Chicken' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'Bacon', checked('Bacon'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'Bacon' %><br>
          
          <%= check_box_tag 'order[toppings][]', 'Ham', checked('Ham'), id:'orders_toppings' %>
          <%= label_tag 'orders_toppings', 'Ham' %><br>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :numberofpizza %><br>
        <%= f.number_field :numberofpizza, :class => "form-control"  %>
      </div>
    </div>
      
      
    
      <div class="col-md-6">
      <div class="actions">
        <%= f.submit:order, :class=> "btn btn-success" %>
      </div>
    </div>
  </div>
 <% end %>
